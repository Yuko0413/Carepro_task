<h1><%= t('forms.task_index.page_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('table_headers.task.title') %></th>
      <th><%= t('table_headers.task.content') %></th>
      <th><%= t('table_headers.task.created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M:%S') %></td>
      <td><%= link_to t('forms.task_index.show_link'), task_path(task), class: 'show-task' %></td>
      <td><%= link_to t('forms.task_index.edit_link'), edit_task_path(task), class: 'edit-task' %></td>
      <td><%= link_to t('forms.task_index.destroy_link'), task, method: :delete, data: {confirm: t('confirmations.delete_task')}, class: 'destroy-task' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>
