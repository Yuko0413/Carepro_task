<p id="notice"><%= notice %></p>

<li><%= link_to 'Tasks Index', root_path, id: 'tasks-index' %></li>
<li><%= link_to 'New Task', new_task_path, id:'new-task' %></li>

<h1>Tasks Index Page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.created_at %></td>
      <td><%= link_to 'Show',task_path(task), class:'show-task' %></td>
      <td><%= link_to 'Edit',edit_task_path(task), class:'edit-task' %></td>
      <td><%= link_to 'Destroy', task, method: :delete, data: {confirm: 'Are you sure?'}, class:'destroy-task' %></td>
    </tr>
    <% end %>
  </tbody>
</table>


